{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "outDir": "./build",
      "rootDir": "./src",
      "esModuleInterop": true,
      "lib": ["es2021"],
      "target": "es2021",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"]
  }
  