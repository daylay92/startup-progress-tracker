{
  "name": "startup-progress-tracker",
  "version": "1.0.0",
  "description": "An application that tracks the progress of startups through different phases.",
  "main": "build/index.js",
  "scripts": {
    "build": "rimraf build && tsc",
    "start": "node ./build/index.js",
    "dev": "cross-env NODE_ENV=dev ts-node-dev src/index.ts",
    "test": "cross-env TS_NODE_FILES=true NODE_ENV=test mocha -r ts-node/register -r source-map-support/register --files src \"tests/**/*.test.ts\" --timeout 40000 --exit",
    "lint": "eslint src test",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier src test --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "keywords": [
    "startups"
  ],
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/lodash": "^4.14.194",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "chai": "^4.3.6",
    "chai-json-pattern": "^1.1.0",
    "chai-match-pattern": "^1.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^3.0.2",
    "sinon": "^15.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.1",
    "supertest-graphql": "^1.1.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "author": "Ayodele Akinbohun",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^6.1.5",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.6",
    "winston": "^3.8.2",
    "winston-console-format": "^1.0.8"
  }
}
